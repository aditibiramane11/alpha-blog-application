
<div class="container-fluid">
    <%= render '/shared/errors', obj: @article %>
  <div class="row">
    <div class="col-md-3"></div>
      <div class="col-md-6"><br>
        <div class="card">
            <div class="card-body">
                  <%= form_with model: @article do |f| %>
<p>
  <%= f.label :Title %><br>
  <%= f.text_field :Title, class: "form-control"  %>
</p>
<p>
  <%= f.label :Description%><br>
  <%= f.text_area :Description, class: "form-control"  %>
</p>
<p>
          <%= f.label :category %>
         
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true,class:"custom-select" ,size: 3, class: "custom-select shadow rounded , form-control" }) %>
</p>         




<div>
   <%= f.submit(@article.new_record? ? "Add Article" : "Update Article", class: "btn btn-outline-success") %>
  <%= link_to 'Return To Articles list', articles_path, class: "btn btn-outline-info" %>
</div>

<% end %>
          </div>
        </div> 

        </div>
        <div class="col-md-3"></div>
    </div>
</div>
