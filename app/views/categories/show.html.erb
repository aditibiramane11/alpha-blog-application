<h2 class="text-center mt-4"><u>Category:<%= @category.name %></u></h2>

<div class="text-center mt-4">
  <% if logged_in? && @user==current_user.admin %>
  <%= link_to "Edit Category Name", edit_category_path(@category), class: "btn btn-outline-info" %>
  <% end %>
</div>

<h3 class="text-center mt-4"><u>Articles</u></h3>

<%= render 'articles/article'%>
<div class="d-flex justify-content-center">
    <%= will_paginate @articles %>
  </div>

